# Create this secret BEFORE deploying tailscale-operator
# Get OAuth credentials from: https://login.tailscale.com/admin/settings/oauth
# Required scopes: devices, auth_keys
#
# kubectl create secret generic tailscale-operator-oauth \
#   --namespace=tailscale-operator \
#   --from-literal=client_id=YOUR_CLIENT_ID \
#   --from-literal=client_secret=YOUR_CLIENT_SECRET
#
# Or apply this file after filling in values:
apiVersion: v1
kind: Secret
metadata:
  name: tailscale-operator-oauth
  namespace: tailscale-operator
type: Opaque
stringData:
  client_id: "YOUR_OAUTH_CLIENT_ID"
  client_secret: "YOUR_OAUTH_CLIENT_SECRET"
